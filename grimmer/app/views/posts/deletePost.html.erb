<div class="container">
  <h2>Delete Post</h2>
  <br>
  <div class="container-fluid row">

    <div class="col-sm-8 ">
      <div  class="container-fluid Style2 end">
        <h6>My Posts</h6>
        <br>
        <% @post_user.each do |post| %>
          <div class="d-flex flex-column mb-3" id ="StylePost" >
            <div class="d-flex mb-3 ">
              <div class="p-2  ">
                <a href="#" class="text-body description" data-toggle="tooltip" title="Click here to see full post" ><%= post.title %></a>
              </div>
              <div class="p-2 ml-auto "><%= post.created_at.strftime('%B %d, %Y at %H:%M') %></div>
            </div>
            <div class="p-2" ><%= post.description %></div>
            <div href="deletePost"  class="text-right" >
              <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
          <br>
        <%end %>
      </div>
    </div>
  </div>
</div>
<br>
<br>
